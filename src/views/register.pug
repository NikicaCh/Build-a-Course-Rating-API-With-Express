extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.text-muted Sign Up
        // register form
        form(method='POST' action='/api/register')
          div.form-group
            label(for='name').text-muted Full Name:
            input#name.form-control(type='text', placeholder='Full Name' name='name')
          div.form-group
            label(for='email').text-muted Email:
            input#email.form-control(type='email', placeholder='example@domain.com' name='email')
          div.form-group
            label(for='pw').text-muted Password:
            input#pw.form-control(type='password' name='password')
          div.form-group
            label(for='pw2').text-muted Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword')
          button.btn.btn-primary(type='submit') Sign up